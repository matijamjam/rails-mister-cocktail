<h1> <%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %></p>
<p><%= dose.ingredient.name %></p>
      <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
<%end %>

<%= link_to 'Add a description', new_cocktail_dose_path(@cocktail) %>



